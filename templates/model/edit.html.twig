{% extends 'backoffice.html.twig' %}

{% block title %}Modifier le modèle{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Modifier le modèle</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ model.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ include('model/_form.html.twig', {'button_label': 'Mettre à jour'}) }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_model_index') }}">Retour à la liste</a>

    {{ include('model/_delete_form.html.twig') }}
</div>
{% endblock %}
