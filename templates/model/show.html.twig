{% extends 'backoffice.html.twig' %}

{% block title %}Modèle{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Modèle</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ model.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ model.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_model_index') }}">Retour à la liste</a>

    <a href="{{ path('app_model_edit', {'id': model.id}) }}">Modifier</a>

    {{ include('model/_delete_form.html.twig') }}
</div>
{% endblock %}