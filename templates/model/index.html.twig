{% extends 'backoffice.html.twig' %}

{% block title %}Index des modèles{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Modèles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for model in models %}
            <tr>
                <td>{{ model.id }}</td>
                <td>{{ model.name }}</td>
                <td>
                    <a href="{{ path('app_model_show', {'id': model.id}) }}">Voir</a>
                    <a href="{{ path('app_model_edit', {'id': model.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_model_new') }}">Créer un nouveau</a>
</div>
{% endblock %}