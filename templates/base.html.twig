<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %}Miruwear</title>
    {# ---- Font Awesome ---- #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    

    {% block stylesheets %}
    {# ---- Style css ---- #}
    <link rel="stylesheet" href="{{asset("css/bootstrap.min.css") }}">
    <link rel="stylesheet" href="{{asset("css/style.css") }}"> 
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Amaranth:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">


    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
        <script src="{{asset('js/bootstrap.bundle.js')}}"></script>
    {% endblock %}
</head>
<body>
  
<nav class="navbar navbar-expand-lg navbar-dark bg-dark" id="logo_nav">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('app_home')}}">
        MiruWear </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main_nav"  aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="main_nav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
               
            </ul>
            <ul class="navbar-nav ms-auto" id="menu_nav">
             <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_home')}}" style="color: white;">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('product')}}" style="color: white;">Collections</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_contact')}}" style="color: white;">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_cart_show')}}" style="color: white;">Panier
                        <span class="badge text-bg-secondary">{{cart_service.getCountCart()}}</span>
                    </a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_backoffice')}}" style="color: white;">Backoffice</a>
                </li>
                {% endif %}

                {% if not app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register')}}" style="color: white;">S'inscrire</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_login')}}" style="color: white;">Se connecter</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout')}}" style="color: white;">Se déconnecter</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<main>
    {% block body %}
    
    {% endblock %}
</main>

{# ---- Footer ---- #}
<footer class="bg-dark text-dark py-4" style="margin-top: 50px;" id="footer_nav">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 mb-4 mb-lg-0 " id="logo_nav">
            <h6 class="mb-4" style="font-weight: bold;">MiruWear</h6>
                <ul class="list-unstyled mb-0">
                    <li>Projet e-commerce</a></li>
                </ul>
            </div>
            <div class="col-lg-3 col-md-6 mb-4 mb-lg-0 " >
                <h6 class="mb-4" style="font-weight: bold;">Collections</h6>
                <ul class="list-unstyled mb-0" >
                    <li><a href="{{ path('product')}}" class="text-dark">Hommes</a></li>
                    <li><a href="{{ path('product')}}" class="text-dark">Femmes</a></li>
                    <li><a href="{{ path('product')}}" class="text-dark">Geek-mangas</a></li>
                    <li><a href="{{ path('product')}}" class="text-dark">StreatWear</a></li>
                    <li><a href="{{ path('product')}}" class="text-dark">StayKawaii</a></li>
                </ul>
            </div>
            <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
                <h6 class="mb-4" style="font-weight: bold;">Contact</h6>
                <ul class="list-unstyled mb-0">
                    <li><a href="{{ path('app_contact')}}" class="text-dark">Contact</a></li>
                    <li><a href="{{ path('app_contact')}}" class="text-dark">Mentions légales</a></li>
                    <li><a href="{{ path('app_contact')}}" class="text-dark">CGV</a></li>
                </ul>
            </div>
            <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
                <h6 class="mb-4" style="font-weight: bold;">Inscription</h6>
                <ul class="list-unstyled mb-0">
                    <li><a href="{{ path('app_register')}}" class="text-dark">S'inscrire</a></li>
                </ul>
            </div>
        </div>
    </div>
</footer>
{# ---- Footer ---- #}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous" defer></script>

</body>
</html>