{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}

<div class="container mt-4">
    <h1>Categorie {{ category.title }}</h1>

        <a href="{{ path('app_category_index') }}" class="btn btn-light">Retour dans la liste</a>


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ category.title }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-dark">Modifier</a>

    {{ include('category/_delete_form.html.twig') }}

    
</div>
{% endblock %}
