{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Catégorie </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}"class="btn btn-light">show</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}"class="btn btn-dark">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}"class="btn btn-dark">Nouvelle Catégorie</a>

    </div>
{% endblock %}
