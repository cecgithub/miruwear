{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
<div class="container">
    <div class="example-wrapper text-center">
        <table class="table">
            <tr>
                <th>Id Product</th>
                <th>Name</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
            {% for item in cart %}
            <tr>
                <td>{{item.product.id}}</td>
                <td>{{item.product.title}}</td>
                <td>{{item.product.price}}$</td>
                <td>{{item.quantity}}</td>
                <td>{{item.product.price * item.quantity}}$</td>
                <td>
                    <a href="{{ path('app_cart_remove', {'id': item.product.id}) }}">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </table>
        <h1>Total Cart : {{total}} â‚¬</h1>
    </div>
</div>
{% endblock %}